{
  "name": "minecraft-skin-viewer.js",
  "version": "1.0.0",
  "description": "A Minecraft skin viewer built with Electron",
  "main": "main.js",
  "scripts": {
    "start-server": "node start-app.js",
    "startasd": "electron main.js",
    "test": "node open.js",
    "start-electron": "electron viewer.js",
    "start-all": "npm-run-all --parallel start-server start-electron",
    "open-skin": "electron viewer.js",


    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.sinanakkoyun.mcskinviewer",
    "productName": "Minecraft Skin Viewer",
    "files": [
      "public/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons"
    }
  },
  "dependencies": {
    "electron": "^30.0.1",
    "express": "^4.19.2",
    "fs": "0.0.1-security",
    "npm-run-all": "^4.1.5"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "keywords": [
    "minecraft",
    "skin",
    "viewer",
    "electron"
  ]
}
