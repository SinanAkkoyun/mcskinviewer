{
  "name": "mcskinviewer",
  "version": "1.0.2",
  "description": "A Minecraft skin viewer built with Electron",
  "main": "main.js",
  "author": {
    "name": "Sinan Akkoyun",
    "email": "akkoyunsinan2@gmx.de"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.sinanakkoyun.mcskinviewer",
    "productName": "Minecraft Skin Viewer",
    "files": [
      "public/**/*",
      "assets/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons"
    }
  },
  "dependencies": {
    "express": "^4.19.2",
    "fs": "0.0.1-security",
    "npm-run-all": "^4.1.5"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3"
  },
  "keywords": [
    "minecraft",
    "skin",
    "viewer",
    "electron"
  ]
}
